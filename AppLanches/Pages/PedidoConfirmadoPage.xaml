<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLanches.Pages.PedidoConfirmadoPage"
             Title="Pedido Confirmado">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
        <Image Source="confirmado.gif" HeightRequest="300" WidthRequest="300" Aspect="AspectFill"></Image>
        <Label Text="Seu Pedido foi confirmado!" FontSize="24" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" TextColor="DarkBlue" Margin="0,20,0,0"></Label>
        <Button x:Name="BtnRetornar" Text="Retornar" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="BtnRetornar_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>