<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLanches.Pages.EnderecoPage"
             Title="EnderecoPage">
    <VerticalStackLayout Margin="20" Spacing="10" VerticalOptions="Start">
        <Label Text="Endereço de entrega" HorizontalOptions="Center" FontSize="Large"></Label>
        <Frame Padding="10" BackgroundColor="White">
            <VerticalStackLayout>
                <Entry x:Name="EntNome" Placeholder="Nome Completo" FontAttributes="Bold" FontSize="Medium" Keyboard="Default"></Entry>
                <Entry x:Name="EntTelefone" FontAttributes="Bold" FontSize="Medium" Keyboard="Telephone"></Entry>
                <Entry x:Name="EntEndereco" Placeholder="Endereço" HeightRequest="100" FontAttributes="Bold" FontSize="Medium" Keyboard="Default"></Entry>
            </VerticalStackLayout>
        </Frame>
        
        <Button x:Name="BtnSalvar" Text="Salvar" FontSize="Medium" Clicked="BtnSalvar_Clicked"></Button>
        
    </VerticalStackLayout>
</ContentPage>